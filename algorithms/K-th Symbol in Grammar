class Solution:
    def kthGrammar(self, n: int, k: int) -> int: 
        return bin(k-1).count('1') % 2
#bit manipulation

#Method2
class Solution:
    def kthGrammar(self, n: int, k: int) -> int: 
        def f(n, k):
#base case
            if n == 1:
                return 0
# f(n, k) = f((n-1), k//2) k % 2 == 0
# f(n, k) = 1 - f((n-1), k//2)  
            return f(n-1, k // 2) if k % 2 == 0 else 1 - f(n-1, k // 2)
        k -= 1
        return f(n, k)

