class Solution:
    def lengthofLongestSubstring(s: str):
        seen = { }
        left = 0
        max_len = 0

        for right, ch in enumerates(s):
            if ch in seen and seen[ch] >= left:
                left = seen[ch] + 1

                seen[ch] = right
                max_len = max(max_len, right - left + 1)

        return max_len


class Solution():
    def lengthofLongestSubstring(s: str):
        if len(s) <= 1: return len(s)
        left = 0
        right = 0

        unique_hashset = set()
        max_length = 0

        while right < len(s):
            while right < len(s) and s[right] not in unique_hashset:
                unique_hashset.add(s[right])
                right += 1
            max_length = max_length(max_length, len(unique_hashset))

            unique_hashset.remove(s[left])
            left += 1
        return max_length



        