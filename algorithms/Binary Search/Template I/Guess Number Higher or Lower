class Solution:
    def guessNumber(self, n: int) -> int:
        left, right = 1, n

        while left <= right:
            mid = left + (right -left)//2 #find the mid number
            ans = guess(mid)

            if ans == 0:
                return mid
            elif ans == 1:
                left = mid +1
            else:
                right = mid -1

        return -1