class Solution:
    def mySqrt(self, x: int) -> int:
        if x < 2: #base case
            return x

        left, right = 1, x//2
        while left <= right:
            mid = left + (right - left ) // 2 #find the mid number

            if mid > x/mid:
                right = mid -1
            else:
                left = mid +1

        #left > right
        return left -1

