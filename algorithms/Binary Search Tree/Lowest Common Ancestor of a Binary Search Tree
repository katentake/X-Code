# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def lowestCommonAncestor(self, root: 'TreeNode', p: 'TreeNode', q: 'TreeNode') -> 'TreeNode':
        pointer = root

        while pointer:
            if p.val > pointer.val and q.val > pointer.val: #如果 $p$ 和 $q$ 的值都大于当前节点，说明公共祖先一定在右子树，pointer = pointer.right
                pointer = pointer.right
            elif p.val < pointer.val and q.val < pointer.val: #如果 $p$ 和 $q$ 的值都小于当前节点，说明公共祖先一定在左子树，pointer = pointer.left
                pointer = pointer.left
            else:
                return pointer